@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- slider_area_start -->
<div class="slider_area">
    <div class="single_slider  d-flex align-items-center slider_bg_1">
        <div class="container">
            <div class="row">
                <span class="col-md-2"></span>
                <div class="col-md-8" style="border: solid 1px black">
                    <div class="row">
                        <a asp-area="Identity" asp-page="./Login" class="genric-btn primary col-md-4">Вход</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="genric-btn primary col-md-4">Регистраци за потребител</a>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="genric-btn primary col-md-4">Регистраци за компания</a>

                    </div>
                    <div class="row" style="background:#ff854d">
                        <div class="col-md-12">
                            <div class="row">
                                <h1>@ViewData["Title"]</h1>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                        <h4>Create a new account.</h4>
                                        <hr />
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Input.Email"></label>
                                            <input asp-for="Input.Email" class="form-control" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Password"></label>
                                            <input asp-for="Input.Password" class="form-control" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.ConfirmPassword"></label>
                                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Register</button>
                                    </form>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <span class="col-md-2"></span>
            </div>
        </div>
    </div>
</div>
<!-- slider_area_end -->

