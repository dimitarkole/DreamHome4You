@model DreamHouse4You.Web.ViewModels.Administration.Category.AddCategoryViewModel

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (ViewData["message"] != null)
            {
                <div class="alert alert-info" role="alert">
                    @ViewData["message"]
                </div>
            }
        </div>
     </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditingCategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Име</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SelectedParentCategoryId" class="control-label">В категория</label>

                    <select asp-for="SelectedParentCategoryId" class="form-control">
                        @foreach (var category in Model.ParentCategories.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedParentCategoryId" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <input type="submit" value="Добави" class="genric-btn primary circle" />

                </div>
            </form>
        </div>
    </div>
 </div>
